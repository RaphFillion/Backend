<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
</head>
<body>
  <h1>Todo List</h1>
  
  <form method="POST" action="/task">
    <input type="text" name="task" placeholder="Nouvelle tâche" autofocus required>
    <button type="submit">Ajouter</button>
  </form>
  
  <h3>Tâches</h3>
  <ul>
    <% for (const [index, task] of tasks.entries()) { %>
      <% if (!task.done) { %> 
        <li>
          <%= task.title %> | <a href="/task/<%= index %>/done">Terminé</a>
        </li>
        <% } else { %> 
        <li>
          <s><%= task.title %></s> | <a href="/task/<%= index %>/delete">Supprimer</a>
        </li>
      <% } %> 
    <% }  %> 
  </ul>
</body>
</html>